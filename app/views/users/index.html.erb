<h3>Users</h3>
<div class="span8">
<table class="table table-condensed">
<thead>
<tr>
<th>Username</th>
<th>Email</th>
<!-- <th>Edit</th> -->
<th>Registered</th>
<th>Role</th>
<th></th>
<th></th>
</tr>
</thead>
<tbody>
<% @users.each do |user| %>
<tr>
<td><%= link_to user.name, user %></td>
<td><%= user.email %></td>
<!--<td><%= link_to :action=>"edit", :id=>user.id do %><i class="icon-wrench"></i><% end %></td>-->
<td><%= user.created_at.to_date %></td>
<td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
<td>
<a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
<%= render user %>
</td>
<td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
</tr>
<% end %>
</tbody>
</table>
</div>

<h3>Bulk Add from .CSV</h3>
<%= form_tag import_users_url, :multipart => true do %>
<%= file_field_tag "file" %>
<%= submit_tag "Upload and do your worst ..."%>
<% end %>

